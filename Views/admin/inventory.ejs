<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Inventory</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
      <a class="navbar-brand" href="/admin/Dashboard">Admin Dashboard</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      ></button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/admin/Dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/warehouses">Warehouses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/products/manage">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/manage-users">Users</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Manage Inventory</h1>

      <table class="table table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Flavor</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Value</th>
            <th>Showroom</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.product_flavor %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price.toFixed(2) %></td>
            <td><%= (item.quantity * item.price).toFixed(2) %></td>
            <td><%= item.warehouse_name || 'N/A'%></td>
            <td>
              <a
                href="/admin/edit-item/<%= item.id %>"
                class="btn btn-warning btn-sm"
                >Edit</a
              >
              <a
                href="/admin/delete-item/<%= item.id %>"
                class="btn btn-danger btn-sm"
                >Delete</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <a href="/admin/inventory/add" class="btn btn-success mb-3">Add Item</a>
    </div>
  </body>
</html>
